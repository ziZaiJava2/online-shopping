<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">
        
	<context:component-scan base-package="com.zzty.demo.shopping">
	</context:component-scan>
	
    <context:annotation-config/>
    
	<bean id="userService" class="com.zzty.demo.shopping.service.UserService" />
    <bean id="dao" class="com.zzty.demo.shopping.dao.UserDAO" />
	<bean id="productionService" class="com.zzty.demo.shopping.service.ProductionService"/>
    <bean id="productionDao" class="com.zzty.demo.shopping.dao.ProductionDAO" />
</beans>